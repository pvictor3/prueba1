<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0"
        card_view:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plomero"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:textSize="22sp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_money"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:id="@+id/imageView5"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_location"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                card_view:layout_constraintLeft_toRightOf="@+id/txtView_card_service_money"
                android:layout_marginLeft="21dp"
                android:id="@+id/imageView6"/>
            <TextView
                android:id="@+id/txtView_card_service_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 500 - 1500"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                card_view:layout_constraintLeft_toRightOf="@+id/imageView5"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:text="Ruptura de plomeria"
                android:textColor="#0015ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="13dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textTipo"
                android:id="@+id/textNombre"/>
            <ImageView
                android:layout_width="123dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_raiting"
                android:layout_marginLeft="0dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textNombre"/>

            <TextView
                android:id="@+id/txtView_card_service_zona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:text="Cuathemoc"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toRightOf="@+id/imageView6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtView_card_service_id"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>