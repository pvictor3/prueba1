<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    tools:context="com.example.adm.appservicios.Fragments.Citas">

    <TextView
        style="@style/Form_header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/citas"
        android:id="@+id/textView4"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="326dp"
        android:layout_height="2dp"
        android:background="@color/nose"
        android:id="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_clock"
        android:id="@+id/ic_hour"
        app:layout_constraintLeft_toRightOf="@+id/txt_view_hour"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_next_dates"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_calendar"
        android:id="@+id/ic_calendar"
        app:layout_constraintLeft_toRightOf="@+id/txt_view_date"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_next_dates"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/white"
        android:id="@+id/button_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="102dp"/>

    <TextView
        android:id="@+id/txt_view_next_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximas Citas:"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <TextView
        android:id="@+id/txt_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHA"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_next_dates"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_view_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORA"
        app:layout_constraintLeft_toRightOf="@+id/txt_view_date"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_next_dates"/>

    <TextView
        android:id="@+id/txt_view_tittle"
        android:layout_width="322dp"
        android:layout_height="41dp"
        android:layout_marginTop="162dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
