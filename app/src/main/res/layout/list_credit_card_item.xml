<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/credit_card_cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0"
        card_view:layout_constraintHorizontal_bias="0.0">

        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/credit_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victor M Parra HernÃ¡ndez"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete"/>

            <TextView
                android:layout_below="@id/credit_card_name"
                android:id="@+id/credit_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 1234 XXXX XXXX"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_below="@id/credit_card_number"
                android:id="@+id/credit_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/18"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>